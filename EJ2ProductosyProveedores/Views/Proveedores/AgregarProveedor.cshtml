@model Proveedores
@{
    ViewData["Title"] = "AgregarProveedor";
     DatosProveedor proveedor = new DatosProveedor();
    ViewBag.Proveedor = proveedor.Proveedores;
    int i = 0;
}
<h1>Agregar Proveedor</h1>
<hr />
<br />
<div class="col-5">
    <form method="post" asp-action="AgregarProveedor">

        @if (ViewBag.Proveedor.Count >= 0)
        {
            i = ViewBag.Proveedor.Count + 1;
            <div class="form-group">
                <h5>ID</h5>
                <input class="form-control" value="@i" asp-for="ID" readonly required />
            </div>

        }
        else
        {
            <div class="form-group">
                <h5>Codigo</h5>
                <input class="form-control" value="0" asp-for="ID" readonly required />
            </div>
        }
        <div class="form-group">
            <h5>Nombre</h5>
            <input class="form-control" asp-for="NOMBRE" required />
        </div>
        <div class="form-group">
            <h5>Dirección</h5>
            <input asp-for="DIRECCION" class="form-control" placeholder="Ingresa la direccion aqui" required />
        </div>
        <div class="form-group">
            <h5>Teléfono</h5>
            <input asp-for="NUM_TELEF" class="form-control input-phone" maxlength="12" id="phone" placeholder="000-000-0000" pattern="[0-9]{3}[ -][0-9]{3}[ -][0-9]{4}" title="Formato: 000-000-0000" required />
        </div>
        <button class="btn btn-primary">Agregar</button>
    </form>
</div>

